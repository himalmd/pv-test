# Database Configuration
# MySQL 8.x connection settings
DB_HOST=localhost
DB_PORT=3306
DB_NAME=snaply
DB_USER=snaply_user
DB_PASS=secure_password

# Inbox Configuration
# Domain used for temporary email addresses
INBOX_DOMAIN=tempinbox.pro

# Time-to-live for inboxes in minutes (default: 60 minutes)
INBOX_TTL_MINUTES=60

# Cooldown period for address reuse in hours (default: 24 hours)
INBOX_COOLDOWN_HOURS=24

# Length of generated email address local part (default: 10 characters)
INBOX_ADDRESS_LENGTH=10

# Maximum retry attempts for generating unique addresses (default: 10)
INBOX_MAX_RETRY_ATTEMPTS=10

# Session Configuration
# Session cookie lifetime in seconds (default: 2592000 = 30 days)
SESSION_COOKIE_LIFETIME=2592000

# Session cookie domain (leave empty for current domain)
SESSION_COOKIE_DOMAIN=

# Session cookie secure flag - set to true for HTTPS only (recommended)
SESSION_COOKIE_SECURE=true
