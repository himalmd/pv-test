{
    "name": "snaply/snaply",
    "description": "Snaply - Web page annotation and commenting platform",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Snaply\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Snaply\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "scripts": {
        "test": "phpunit"
    }
}
